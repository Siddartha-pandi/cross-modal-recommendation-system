# Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=cmrs_user
POSTGRES_PASSWORD=changeme_securepassword
POSTGRES_DB=cmrs_db
DATABASE_URL=postgresql://cmrs_user:changeme_securepassword@postgres:5432/cmrs_db

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redispassword

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=changeme_generatesecurerandomkey_atleast32characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# FRONTEND
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost/api/v1

# ============================================================================
# E-COMMERCE APIS (Optional)
# ============================================================================
# Amazon
AMAZON_API_KEY=
AMAZON_API_SECRET=

# Shopify
SHOPIFY_SHOP_URL=
SHOPIFY_ACCESS_TOKEN=

# WooCommerce
WOOCOMMERCE_URL=
WOOCOMMERCE_KEY=
WOOCOMMERCE_SECRET=

# ============================================================================
# CLOUD STORAGE (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=
LOG_LEVEL=INFO

# ============================================================================
# DEPLOYMENT
# ============================================================================
ENVIRONMENT=production
APP_VERSION=1.0.0
